# ====================================================
# Local Rules 
# ====================================================
local rule explicit_alias ( name : sources * : requirements * : default-build * : usage-requirements * )
    {
    alias $(name) : $(sources) : $(requirements) : $(default-build) : $(usage-requirements) ;
    explicit $(name) ;
    }

local path-constant dbg_install_dir = $(ARTIFACTS_DIR)/debug/hld/spi ;
local path-constant rel_install_dir = $(ARTIFACTS_DIR)/release/hld/spi ;

# ====================================================
# Public Targets
# ====================================================
explicit_alias PUB : : : : <define>THOR_HLD_SPI <define>THOR_LLD_SPI ;

# ====================================================
# Static Libraries
# ====================================================
lib hld_spi
  : [ glob *.cpp ]

  : <link>static
    <use>PUB
    <use>/AURORA//PUB
    <use>/CHIMERA//PUB
    <use>/THOR//PUB
    <use>/THOR//TARGET_PROPAGATED_OPTIONS
  ;
explicit hld_spi ;
explicit_alias LIB : : : : <library>hld_spi ;

# ====================================================
# Test Driver Executable
# ====================================================
exe hld_spi_test
  : [ glob test/*.cpp ]

    /CHIMERA//CORE_LIBS
    /CHIMERA/ALGORITHM//LIB
    /CHIMERA/PERIPH/GPIO//LIB
    /GOOGLE//gtest
    /STM32F4//CORE_LIBS
    /STM32F4/GPIO//LIB
    /STM32F4/SPI//LIB
    /THOR//CORE_LIBS
    /THOR/GPIO//LIB
    /THOR/SPI//LIB
  
  : <link>static
    <Thor>enabled-F4
    <use>PUB
    <use>/AURORA//PUB
    <use>/CHIMERA//PUB
    <use>/THOR//PUB
    <use>/THOR//TARGET_PROPAGATED_OPTIONS
    <use>/GOOGLE//TEST_PUB
    <linkflags>-Wl,--no-as-needed
  ;
explicit hld_spi_test ;

# ====================================================
# Installation Targets
# ====================================================
install INSTALL_TEST : hld_spi_test
  : <variant>release:<location>$(rel_install_dir)
    <variant>debug:<location>$(dbg_install_dir)
  ;

install INSTALL_LIB : hld_spi
  : <variant>release:<location>$(rel_install_dir)
    <variant>debug:<location>$(dbg_install_dir)
  ;

explicit_alias INSTALL_ALL : INSTALL_TEST INSTALL_LIB ;